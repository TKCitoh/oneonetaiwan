<div class="container">
  <h2>投稿編集画面</h2>
    <%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>
      <div class="col-12" style="height: 1000px">
        <div class="field">
          <%= f.label "画像" %>
          <%= f.file_field :image, accept: '.jpeg, .jpg, .gif, .png, .bmp' %>
        </div>

        <div class="field">
          <%= f.label "動画" %>
          <%= f.file_field :video, accept: '.mp4, .m4v, .avi, .mov' %>
        </div>

        <div class="field">
          <%= f.label "題名" %>
          <%= f.text_field :title, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label "説明" %>
          <%= f.text_area :caption, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
           <%= f.text_field :name, value: @tag_list, class: "form-control"%>
        </div>

        <%= f.submit "編集内容を保存",class: "btn btn-success" %>

        <% end %>

        <% if @post.end_user == current_end_user %>
          <%= link_to "削除", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
        <% end %>
    </div>
</div>