<div class="container">
  <h2>投稿詳細画面</h2>
  <div class="row">
    <div class="col-12" style="height: 1000px">
      <div class="field mb-3">
        <%= image_tag @post.get_image %>
        <%= video_tag @post.get_video %>
      </div>
      <div class="mb-3">
        <label>題名</label></br>
        <%= @post.title %>
      </div>
      <div class="mb-3">
        <label>説明</label></br>
        <%= @post.caption %>
      </div>
      <div class="mb-3">
        <%# タグ %>
      </div>
      <div class="mb-3">
        <label>ユーザー画像</label></br>

      </div>
      <div class="mb-3">
        <label>ユーザーネーム</label></br>
        <%= @post.user.name %>
      </div>
      <div class="mb-3">
        <label>投稿日</label></br>
        <%= @post.created_at.strftime('%Y/%m/%d') %>
      </div>
      <div class="mb-3">
        <% if @post.liked_by?(current_end_user) %>
          <p><%= link_to post_likes_path(@post), method: :delete do %>
              ♥<%= @post.likes.count %> いいね
              <% end %>
          </p>
        <% else %>
          <p><%= link_to post_image_favorites_path(@post_image), method: :post do %>
              ♡<%= @post_image.favorites.count %> いいね
              <% end %>
          </p>
        <% end %>
      </div>
      <div class="mb-3">
        <p>コメント件数：<%= @post.comments.count %></p>
          <% @post.comments.each do |comment| %>
        <p><%= image_tag comment.end_user.get_profile_image(100,100) %></p>
            <%= comment.end_user.name %>
            <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
            <% if comment.end_user == current_end_user %>
              <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete %>
            <% end %>
          <% end %>
      </div>
      <div>
        <%= form_with model: [@post, @comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>