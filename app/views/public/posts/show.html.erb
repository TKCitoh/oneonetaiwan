<div class="container">
  <h2>投稿詳細画面</h2>
  <div class="row">
    <div class="col-12" style="height: 1000px">
      <div class="field mb-3">
        <%= image_tag @post.get_image(100,100) %>
      </div>
        <% if @post.video.attached? %>
      <div class="mb-3">
        <video src="<%= rails_blob_path(@post.video) %>" type="video/mp4" size="300*150" controls></video>
      </div>
        <% end %>
      <div class="mb-3">
        <label>題名</label></br>
        <%= @post.title %>
      </div>
      <div class="mb-3">
        <label>説明</label></br>
        <%= @post.caption %>
      </div>
      <div class="mb-3">
        <label>ユーザー画像</label></br>
        <%= image_tag @post.end_user.get_profile_image(100,100) %>
      </div>
      <div class="mb-3">
        <label>ユーザーネーム</label></br>
        <%= @post.end_user.name %>
      </div>
      <div class="mb-3">
        <label>投稿日</label></br>
        <%= @post.created_at.strftime('%Y/%m/%d') %>
      </div>
      <div class="mb-3">
        <% if @post.liked_by?(current_end_user) %>
          <p><%= link_to post_likes_path(@post), method: :delete do %>
              ♥<%= @post.likes.count %> いいね
              <% end %>
          </p>
        <% else %>
          <p><%= link_to post_likes_path(@post), method: :post do %>
              ♡<%= @post.likes.count %> いいね
              <% end %>
          </p>
        <% end %>
      </div>
      <div class="mb-3">
        <p>コメント件数：<%= @post.comments.count %></p>
          <% @post.comments.each do |comment| %>
        <p><%= image_tag comment.end_user.get_profile_image(100,100) %></p>
            <%= comment.end_user.name %>
            <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
            <% if comment.end_user == current_end_user %>
              <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete %>
            <% end %>
          <% end %>
      </div>
      <% unless current_end_user == EndUser.find(1) %>
        <%= form_with model: [@post, @comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      <% else %>
      <% end %>
      <div>
        <% @post_tags.each do |tag| %>
          <%= link_to tag.name,search_tag_posts_path(tag_id: tag.id)%>
          <%="(#{tag.posts.count})" %>
        <% end %>
      </div>
      <%= link_to "編集する", edit_post_path, class: "btn btn-success"%>
    </div>
  </div>
</div>