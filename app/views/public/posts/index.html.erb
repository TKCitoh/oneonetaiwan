<div class="container">
  <div class="search-form text-center">
    <%= form_with url: search_posts_path, method: :get, local: true do |f| %>
    <div class="input-group mt-5">
      <%= f.text_field :keyword, placeholder: "投稿を検索する", class: 'form-control' %>
      <div class="input-group-append">
        <%= f.submit "検索する", class: "btn btn-outline-success" %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="text-right index-new">
    <%= link_to new_post_path do %>
      <button type="button" class="btn btn-primary">＋</button>
    <% end %>
  </div>
  <%= render 'list', posts: @posts %>
</div>