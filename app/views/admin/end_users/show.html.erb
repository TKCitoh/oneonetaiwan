<div class = "container">
  <h2 class="admin-title"><%= @end_user.name %>さんのユーザー詳細</h2>

    <table class="table">
      <thead>
        <tr>
          <th>ユーザーID</th>
          <td><%= @end_user.id %></td>
        </tr>

        <tr>
          <th>名前</th>
          <td><%= @end_user.name %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @end_user.email %></td>
        </tr>

        <tr>
          <th>会員ステータス</th>
          <td><% if @end_user.is_deleted==true %>
              退会
              <% else %>
              有効
              <% end %>
          </td>
        </tr>
      </thead>
    </table>
    <%= link_to "編集する", edit_admin_end_user_path, class: "btn btn-success" %>

    <h2 class="admin-title"><%= @end_user.name %>さんのコメント一覧</h2>
	  <table class="table">
	    <thead>
	      <tr>
	          <th>コメントID</th>
	          <th>コメント</th>
	      </tr>
	    </thead>
	    <tbody>
	      <% @end_user.comments.each do |comment| %>
	    	<tr>
          <td><%= link_to admin_comments_path(end_user_id: @end_user.id) do %>
              <%= comment.id %></td>
              <% end %>
          <td><%= comment.comment %></td>
        </tr>
        <% end %>
	    </tbody>
	   </table>

	   <h2 class="admin-title">
	     <%= link_to @end_user.name, admin_posts_path(end_user_id: @end_user.id) %>さんの投稿一覧
	   </h2>


</div>